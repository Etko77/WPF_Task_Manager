<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        xmlns:vs="clr-namespace:TaskManager.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="840" Width="1280"
        MinWidth="1150"
        MinHeight="650"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vs:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Storyboard x:Key="SlideOnLoad">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0.0" To="1.0" Duration="0:0:1">
                
            </DoubleAnimation>
            
        </Storyboard>
    </Window.Resources>
    <Grid Opacity="1" >
        <Grid.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard Storyboard="{StaticResource SlideOnLoad}"/>
            </EventTrigger>
            
        </Grid.Triggers>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="435"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="140"/>

        </Grid.ColumnDefinitions>
        <!-- Nav pane -->
        <Rectangle Fill="{StaticResource AccentDark}" Grid.ColumnSpan="2" />
        <StackPanel Grid.Column="1">
            <Button Style="{StaticResource TaskManagerNavButton}">
                <Viewbox Width="35" Height="35">
                    <Path Data="{StaticResource ListIcon}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>
            <Button Style="{StaticResource TaskManagerNavButton}">
                <Viewbox Width="35" Height="35">
                    <Path Data="{StaticResource Check}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>
            <Button Style="{StaticResource TaskManagerNavButton}">
                <Viewbox Width="35" Height="35">
                    <Path Data="{StaticResource Clock}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>
        </StackPanel>

        <!-- Task List Background -->
        <Rectangle Fill="{StaticResource TaskListBackground}" 
           Grid.Column="2" />

        <!-- Task List Grid -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="38"/>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="335*"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource Heading1}" 
                   Content="Tasks"
                   VerticalAlignment="Center"
                   Padding="20 0 0 0"
                   IsHitTestVisible="False"/>
            <!-- Add new Task button -->
            <Button  Style="{StaticResource RoundAccentButton}"
                HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Height="40"
                    Width="40"
                    Margin="375,0,0,0"
                     Command="{Binding IOpenNewWindow}">
                <!--Icon-->
                <Viewbox Width="22">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>

            </Button>
            <!--Search task bar-->
            <TextBox x:Name="TaskSearchBox"
                Style="{StaticResource TaskListSearchBox}"
                     Grid.Row="1"
                     Margin="20,0,20,0"/>
            <Label IsHitTestVisible="False"
                Content="Search Tasks..."
                Grid.Row="1"
                VerticalAlignment="Center"
                Margin="40,0,0,0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearchBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Button Style="{StaticResource SearchButton}"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="375,0,0,0"
                Padding="10"
                Background="Transparent"
                BorderBrush="Transparent"
                    Width="30"
                    Height="30"
                                        
                    >

                <Viewbox Width="20">
                    <Path Data="{StaticResource SearchIcon}"  Fill="{StaticResource Borders}"/>
                </Viewbox>

            </Button>

            <!--List of tasks-->
            <ListView Grid.Row="2"
                      Background="Transparent"
                      Margin="0,20,0,20" Grid.RowSpan="2">

            </ListView>

        </Grid>
        <!--Task viewer-->
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <!--Task details-->
            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <!--Task title-->
                <TextBlock Text="Task Title"
                           Style="{StaticResource Title}"
                           VerticalAlignment="Center"
                          />
                <!--Importance badge-->
                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20 5"
                        CornerRadius="5"
                        Background="{StaticResource Importance-Low}">
                    <TextBlock Text="Critical"
                               Foreground="Black"
                               FontWeight="Bold"
                               FontSize="13"/>

                </Border>
                <!--Description Scroll viewer-->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <!--Description-->
                    <TextBlock Text="This is a short description test."
                           TextWrapping="Wrap"
                               FontSize="16"
                           Foreground="{StaticResource PlaceholderText}"
                           Margin="0 20"/>
                </ScrollViewer>

                <!--Due date-->
                <TextBlock Text="Due: 01/01/2025"
                           Background="DarkSlateBlue"
                           Padding="20 3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Row="2"
                           Foreground="White"/>

            </Grid>


            <!--Check lists-->
            <Grid Grid.Row="1"
                  Margin="0 20 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <!--List title-->
                <TextBlock Style="{StaticResource Title}"
                    Text="Task Check List"
                    VerticalAlignment="Center"
                    Margin="20 0 0 0"/>
                <ListView 
                      Background="Transparent"
                      BorderThickness="0"
                    Grid.Row="1">

                </ListView>
            </Grid>
            <!--Task view Buttons-->
            <Grid Grid.Row="2">
                <Button Style="{StaticResource TaskViewDeleteButton}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="20 0 0 0"
                        Content="Delete"/>
                <Button Style="{StaticResource TaskViewEditButton}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Edit"/>
                <Button Style="{StaticResource TaskViewCompleteButton}"
                    HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="Complete"
                        Margin="0 0 20 0"/>
            </Grid>


        </Grid>

        <!-- Task Status Bar -->
        <Rectangle Fill="{StaticResource TaskStatusBackground}" 
           Grid.Column="4" />

        <!--Task status-->
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="140"/>

            </Grid.RowDefinitions>
        </Grid>

    </Grid>
</Window>
