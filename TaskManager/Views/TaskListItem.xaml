<UserControl x:Class="TaskManager.Views.TaskListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="145" d:DesignWidth="435">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <!--Title-->
        <TextBlock Text="Title" Foreground="{StaticResource TaskListUCTitle}"
                   Margin="20 0" VerticalAlignment="Center" FontSize="18"/>
        <!--Importance badge-->
        <Border CornerRadius="3" 
                Background="{StaticResource PlaceholderBordersText}"
                Padding="40 0"
                Height="23"
                HorizontalAlignment="Right"
                Margin="0 0 20 5">
            <TextBlock Text="Importance" Foreground="{StaticResource PlaceholderText}"/>

        </Border>
        <!--Text-->
        <TextBlock Text="Boby boy boy boy buy buy buy uby uby buy aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                   TextWrapping="Wrap"
                   Grid.Row="1"
                   Margin="20 0"
                   Foreground="{StaticResource TaskListUCDescription}"/>
        <!--Due date-->
        <TextBlock Text="Due 2/2/2025"
           Grid.Row="2"
           VerticalAlignment="Center"
           Margin="20 0"
                   Foreground="{StaticResource TaskListUCDescription}"/>
    </Grid>
</UserControl>
